{
  "$schema": "http://json-schema.org/draft-06/schema#",
  "$ref": "#/definitions/Welcome",
  "definitions": {
    "Welcome": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "specimens": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/Specimen"
          }
        }
      },
      "required": [
        "specimens"
      ],
      "title": "Welcome"
    },
    "Specimen": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "lat": {
          "type": "number",
          "maximum": 90,
          "minimum":  40
        },
        "lng": {
          "type": "number",
          "maximum": 180,
          "minimum": -180

        },
        "plant_id": {
          "type": "integer",
          "exclusiveMinimum": 0
        },
        "specimen_id": {
          "type": "integer",
          "exclusiveMinimum": 0
        },
        "common": {
          "type": "string"
        },
        "genus": {
          "type": "string",
          "minLength": 10,
          "maxLength": 65
        },
        "species": {
          "type": "string"
        },
        "address": {
          "type": "string"
        },
        "notes": {
          "type": "string"
        }
      },
      "required": [
        "genus",
        "lat",
        "lng",
        "plant_id",
        "specimen_id"
      ],
      "title": "Specimen"
    }
  }
}
